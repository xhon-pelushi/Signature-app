# =============================================================================
# SignatureApp Environment Variables
# =============================================================================
# Copy this file to .env.local and fill in your values
# Never commit .env.local to version control!

# =============================================================================
# Database Configuration
# =============================================================================
# SQLite (default - recommended for development)
DATABASE_URL="file:./prisma/dev.db"

# PostgreSQL (for production)
# DATABASE_URL="postgresql://user:password@localhost:5432/signatureapp?schema=public"

# MySQL (alternative)
# DATABASE_URL="mysql://user:password@localhost:3306/signatureapp"

# =============================================================================
# NextAuth Configuration
# =============================================================================
# Generate a secure secret with: openssl rand -base64 32
NEXTAUTH_SECRET="your-secret-key-here-please-change-in-production"

# Your application URL (change for production)
NEXTAUTH_URL="http://localhost:3000"

# =============================================================================
# Email (SMTP) Configuration
# =============================================================================
# These can also be configured via the /setup wizard on first run
# If set here, they will be used as defaults

# Gmail example:
# SMTP_HOST="smtp.gmail.com"
# SMTP_PORT="587"
# SMTP_USER="your-email@gmail.com"
# SMTP_PASS="your-app-password"
# SMTP_FROM="your-email@gmail.com"

# SendGrid example:
# SMTP_HOST="smtp.sendgrid.net"
# SMTP_PORT="587"
# SMTP_USER="apikey"
# SMTP_PASS="your-sendgrid-api-key"
# SMTP_FROM="noreply@yourdomain.com"

# Generic SMTP:
SMTP_HOST=""
SMTP_PORT="587"
SMTP_USER=""
SMTP_PASS=""
SMTP_FROM=""

# =============================================================================
# File Storage Configuration
# =============================================================================
# Storage driver: "local" or "s3"
STORAGE_DRIVER="local"

# Local storage path (relative to project root)
LOCAL_STORAGE_PATH="./uploads"

# AWS S3 Configuration (only needed if STORAGE_DRIVER="s3")
S3_BUCKET=""
S3_REGION="us-east-1"
S3_ACCESS_KEY=""
S3_SECRET_KEY=""
S3_ENDPOINT="" # Optional: for S3-compatible services like R2, DigitalOcean Spaces

# Cloudflare R2 Example:
# S3_BUCKET="your-bucket-name"
# S3_REGION="auto"
# S3_ACCESS_KEY="your-r2-access-key"
# S3_SECRET_KEY="your-r2-secret-key"
# S3_ENDPOINT="https://your-account-id.r2.cloudflarestorage.com"

# =============================================================================
# Application Configuration
# =============================================================================
# Node environment
NODE_ENV="development"

# Maximum file upload size in MB
MAX_FILE_SIZE_MB="25"

# Session duration in seconds (default: 30 days)
SESSION_MAX_AGE="2592000"

# =============================================================================
# Optional: Third-party Integrations
# =============================================================================
# Google OAuth (optional - for future OAuth implementation)
# GOOGLE_CLIENT_ID=""
# GOOGLE_CLIENT_SECRET=""

# GitHub OAuth (optional - for future OAuth implementation)
# GITHUB_CLIENT_ID=""
# GITHUB_CLIENT_SECRET=""

# Sentry Error Tracking (optional)
# SENTRY_DSN=""

# Analytics (optional)
# NEXT_PUBLIC_GA_ID=""
# NEXT_PUBLIC_PLAUSIBLE_DOMAIN=""

# =============================================================================
# Development/Debugging
# =============================================================================
# Enable debug logging (development only)
# DEBUG="true"

# Disable email sending (useful for testing)
# DISABLE_EMAIL="true"


